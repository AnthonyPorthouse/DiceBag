{
    "name": "porthou/dicebag",
    "description": "Create Dice roll results from standard dice notation",
    "keywords": [
        "dice",
        "rpg"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Anthony Porthouse",
            "email": "anthony@porthou.se"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "bin": [
        "bin/dicebag"
    ],
    "autoload": {
        "psr-4": {
            "DiceBag\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DiceBag\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1.3 || ^8.0.0",
        "ext-json": "*",
        "symfony/console": "^4.0|^5.0|^6.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^8 || ^9",
        "roave/security-advisories": "dev-master"
    }
}
